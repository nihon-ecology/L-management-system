<!DOCTYPE html>
<html>

<head>
    <% if (isTestMode) { -%>
        <meta name="robots" content="noindex, nofollow">
        <!-- TEST MODE: This page is for preview only -->
        <% } -%>
            <% if (!isTestMode && agency.tracking.gtm.enabled) { -%>
                <!-- Google Tag Manager -->
                <script>
                    (function (w, d, s, l, i) {
                        w[l] = w[l] || [];
                        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
                        var f = d.getElementsByTagName(s)[0],
                            j = d.createElement(s),
                            dl = l != "dataLayer" ? "&l=" + l : "";
                        j.async = true;
                        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
                        f.parentNode.insertBefore(j, f);
                    })(window, document, "script", "dataLayer", "<%= agency.tracking.gtm.id %>");
                </script>
                <!-- End Google Tag Manager -->
                <% } -%>
                    <meta charset="utf-8" />
                    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"
                        name="viewport" />
                    <link rel="stylesheet" href="../css/style.css" />
</head>

<body>
    <% if (!isTestMode && agency.tracking.gtm.enabled) { -%>
        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=<%= agency.tracking.gtm.id %>" height="0"
                width="0" style="display: none; visibility: hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->
        <% } -%>
            <main>
                <style>
                    body {
                        min-height: 80dvh;
                        display: grid;
                        place-items: center;
                        background-color: #CDECFF;
                        padding: 40px 0;
                    }

                    img {
                        width: 100%;
                    }

                    .link {
                        width: 80%;
                        display: block;
                        margin: 10px auto 0;
                    }
                </style>
                <div><img class="img01" src="./img/01.png" /></div>
                <% if (agency.line && agency.line.liffUrl) { -%>
                    <a class="link" href="<%= agency.line.liffUrl %>"><img class="img02" src="./img/02.png" /></a>
                    <% } else { -%>
                        <div><img class="img02" src="./img/02.png" /></div>
                        <% } -%>
            </main>
            <style>
                @media screen and (max-width: 750px) {
                    :root {
                        background-color: #ceedff;
                    }

                    img {
                        vertical-align: bottom;
                    }
                }
            </style>
</body>

</html>